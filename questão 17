#include <stdio.h>
#include <math.h>

int main(){
    int n1, n2, n3, n4, par=0;
    printf("numero 1: ");
    scanf("%d", &n1);
    printf("numero 2: ");
    scanf("%d", &n2);
    printf("numero 3: ");
    scanf("%d", &n3);
    printf("numero 4: ");
    scanf("%d", &n4);

    if(n1%2==0){
        par = par + n1;
    }
    if(n2%2==0){
        par = par + n2;
    }
    if(n3%2==0){
        par = par + n3;
    }
    if(n4%2==0){
        par = par + n4;
    }
    printf("soma dos pares eh %d .\n", par);
}
