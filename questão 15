#include <stdio.h>
#include <math.h>


int main(){
    float x1, x2;
    int a, b, c, delta;
    printf("Calcular as raÃ­zes de uma equacao quadratica: \n");
    printf("Digite o valor de 'a':");
    scanf("%d", &a);
    printf("Digite o valor de 'b':");
    scanf("%d", &b);
    printf("Digite o valor de 'c':");
    scanf("%d", &c);

    delta = (b*b)-(4*a*c);
    if(delta>=0){
        x1 = (-b + sqrt(delta))/(2*a);
        x2 = (-b - sqrt(delta))/(2*a);
        
        printf("x1 = %1.2f\n", x1);
        printf("x2 = %1.2f\n", x2);
    }else{
        printf("estudar numeros complexos\n");
    }
}
